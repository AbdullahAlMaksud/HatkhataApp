{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "android",
        "ios"
      ]
    ],
    "header-max-length": [2, "always", 72],
    "body-max-line-length": [2, "always", 120],
    "footer-max-line-length": [2, "always", 120]
  }
}
